{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stats",
  "description": "card stats",
  "type": "object",
  "required": [
    "base",
    "current"
  ],
  "properties": {
    "base": {
      "description": "the card's skills at time of minting",
      "type": "array",
      "items": {
        "type": "integer",
        "format": "uint8",
        "minimum": 0.0
      }
    },
    "current": {
      "description": "the card's current skills",
      "type": "array",
      "items": {
        "type": "integer",
        "format": "uint8",
        "minimum": 0.0
      }
    }
  }
}
